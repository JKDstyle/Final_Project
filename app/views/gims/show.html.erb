<div class="container">
	<div class="row">
		<div class="col-lg-6">
			<h1><%= @gim.name %></h1> 
			<p><%= @gim.description %></p> 
			<p><%= @gim.address %></p> 
			<p hidden="true" class='lat'><%= @gim.lattitude %></p> 
			<p hidden="true" class='lon'><%= @gim.longitude %></p> 


			<h3><%= @gim.name %></h3> 
			<% @gim.martial_arts.each do |martial| %>
				<%= martial.name %>
			<% end %> 
			<h5><%=link_to "Martial Art Schools", gims_path %><h5>
			<h5><%=link_to "Zones to practise",zones_path %><h5>
			<h5><%=link_to "Back to menu", root_path%><h5>
		</div>
		<div class="col-lg-6">
			<button class="btn btn-primary trigger-map">Show me the map</button>

			<div id="map"></div>
		</div>
		<h5><%=link_to "Martial Arts",martial_arts_path %><h5>
	</div>
</div>

